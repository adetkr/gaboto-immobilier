<div class="container">
  <div class="row">
    <div class="form-login col-xs-12 col-sm-8">
      <%= simple_form_for(flat) do |f| %>
        <!-- [...] -->
        <%= f.input :description %>
        <%= f.input :operation_type , as: :select , collection: Flat::TYPE , input_html:  { class: "select2" }%>

        <%= f.input :house_type , as: :select , collection: Flat::HOUSE_TYPE, input_html:  { class: "select2" } %>
        <%= f.input :address %>
        <%= f.input :rooms %>
        <%= f.input :pieces %>
        <%= f.input :surface %>
        <%= f.input :price %>
        <%= f.association :equipments,
                  as: :check_boxes,
                  input_html: { class: "tag-selector" },
                  item_wrapper_class: 'tag-item' %>

        <%= f.input :photos, as: :file, input_html: { multiple: true , class: 'd-none'} , label_html: { class: 'upload-photo'}, label: 'ðŸ“· Upload a photo'%>
        <%= f.submit "Add a new flat", :class => "btn-style-01 text-uppercase py-2 px-5 rounded-lg"  %>
        <!-- [...] -->
      <% end %>
    </div>
  </div>
</div>

